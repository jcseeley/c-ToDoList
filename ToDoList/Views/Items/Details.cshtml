@{
  Layout = "_Layout";
}

@model ToDoList.Models.Item

<h2>Item Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Description): @Html.DisplayFor(model => model.Description)<h3>
@if(@Model.JoinEntities.Count == 0)
{
  <h3>This item does not belong to any categories.</h3>
}
else
{
  <h3>Categories This Item Belongs To:</h3>
  @foreach (var join in Model.JoinEntities)
  {
    <h4>@join.Category.Name</h4>
  }
}
<h3>@Html.ActionLink("Edit Item", "Edit", new { id = Model.ItemId })</h3>
<h3>@Html.ActionLink("Delete Item", "Delete", new { id = Model.ItemId })</h3>

<h4>@Html.ActionLink("Back To List", "Index")</h4>