@{
  Layout = "_Layout";
}

@using ToDoList.Models;
@model List<ToDoList.Models.Item>;

<h2>Items:</h2>

@if (@Model.Count == 0)
{
  <h3>There are no items on your list.</h3>
}

@foreach(Item item in Model)
{
  <h5>@Html.ActionLink($"{item.Description}", "Details", new { id = item.ItemId }) | @item.Category.Name</h5>
}

<h4>@Html.ActionLink("Add New Item", "Create")</h4>
<h4>@Html.ActionLink("Home", "Index", "Home")</h4>